@model BookStoreAli.Models.User

@{
    ViewBag.Title = "Login";



}


<div class="center-block">


    <div class="div-center">

        <div class="content">

            <h3>Login</h3>
            <hr />
            <form method="Post">
                <div class="form-group">
                    @if (!string.IsNullOrEmpty(ViewBag.incorrect))
                    {
                        <p class="text-danger">@ViewBag.incorrect</p>
                    }
                    @*@Html.LabelFor(m => m.Name)*@
                    <label>Name</label>
                    <input type="text" name="@nameof(Model.Name)" class="form-control" placeholder="Name">
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
                <div class="form-group ">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" name="@nameof(Model.Password)" class="form-control" placeholder="Password">
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
                
                <button type="submit" class="btn btn-primary">Login</button>
                <spam> &nbsp; New User? @Html.ActionLink("Register", "Register")</spam>

            </form>

        </div>



    </div>
</div>

