@model BookStoreAli.Models.RegisterUser

@{
    ViewBag.Title = "Register";
}


<div class="center-block">


    <div class="div-center">

        <div class="content">

            <h3>Register</h3>
            <hr />
            <form id="registerForm" method="Post">
                <div class="form-group">
                    <span>@ViewBag.errormsg</span>
                    <label>Name</label>
                    <input type="text" name="@nameof(Model.Name)" class="form-control" placeholder="Name">
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
                <div class="form-group ">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" id="password" name="@nameof(Model.Password)" class="form-control" placeholder="Password">
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
                <div class="form-group ">
                    <label for="exampleInputPassword1">Confirm Password</label>
                    <input type="password" id="confirmPassword" name="@nameof(Model.ConfirmPassword)" class="form-control" placeholder="Password">
                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                    @*@Html.CheckBoxFor(m => m.Remember) Remember Me*@
                <div>
                    @Html.CheckBoxFor(m => m.Remember,new {@class="alertCheckbox",id= "alertCheckboxId", onclick ="message()"}) Remember Me
                </div>
                </div>
               


                    <button type="submit" class="btn btn-primary registerBtn">Register</button>
                    <span> &nbsp; Already Registered? @Html.ActionLink("Login", "Login")</span>


            </form>

        </div>



    </div>
</div>
@section scripts{
<script>
    //using javascript
    function message() {
        let box = document.getElementById('alertCheckboxId');
        if (box.checked)
            alert('You will be signed in automatically Next Time');
        else
            alert('You should sign in Next Time');
    }

    // Using Jquery

    $('#alertCheckboxId').click(function(){
        if (this.checked)
            alert('You will be signed in automatically Next Time');
        else
            alert('You should sign in Next Time');
    })
</script>

    }


